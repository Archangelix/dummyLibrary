# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.Login.loginPage
POST	/							controllers.Login.login
GET     /list                       controllers.Application.index
GET     /first                      controllers.Application.navigateFirst
GET     /prev                       controllers.Application.navigatePrev
GET     /next                       controllers.Application.navigateNext
GET     /last                       controllers.Application.navigateLast
GET		/:id/edit					controllers.CatalogDetail.edit(id)
GET		/:id/delete					controllers.Application.remove(id)
GET		/newcatalog					controllers.CatalogDetail.gotoNewCatalog
POST	/newcatalog					controllers.CatalogDetail.save

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
